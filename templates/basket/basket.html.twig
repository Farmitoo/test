<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link href="css/main.css" type="text/css" rel="stylesheet" />
    <title>Panier</title>
</head>
<body>
<div class="container">
    <div class="content">
        <div class="header">
            <h1>Mon panier</h1>
        </div>
        <div class="body">
            <div class="item header-item">
                <div class="image"></div>
                <div class="title">Titre</div>
                <div class="brand">Marque</div>
                <div class="price">Prix unitaire</div>
                <div class="quantity">Quantité</div>
                <div class="option">Supprimer</div>
            </div>
            {% for item in order.items %}
                <div class="item">
                    <div class="image"><img src="images/image{{ loop.index }}.jpg" alt="image produit"/></div>
                    <div class="title">{{ item.product.title }}</div>
                    <div class="brand">{{ item.product.brand.name }}</div>
                    <div class="price">{{ item.product.price }}€</div>
                    <div class="quantity">{{ item.quantity }}</div>
                    <div class="option">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                        </svg>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="footer">
            <div class="total">
                <div class="total-container">
                    <p>Sous-total HT: {{ order.ht }}€</p>
                    <p>Frais de port HT: {{ order.htShippingFees }}€</p>
                    <p>Total HT: {{ order.htTotal }}€</p>
                    <p>Total TVA: {{ order.tvaTotal }}€</p>
                    {% for promo in order.promotions %}
                        {% if promo.isApplied %}
                            <p>Promotion {{ loop.index }}: -{{ promo.reduction }}%</p>
                        {% endif %}
                    {% endfor %}
                    <p class="total-ttc">Total TTC: {{ order.ttcTotal }}€</p>
                    <button type="button" class="btn btn-success">Passer commande</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
</body>
</html>